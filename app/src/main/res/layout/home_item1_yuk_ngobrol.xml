<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:Android="http://schemas.android.com/tools"
    android:layout_below="@id/cariApoteker_home"
    app:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:cardElevation="4dp"
    >
    <RelativeLayout
        android:id="@+id/ly1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/contoh_foto_yuk"
            android:id="@+id/foto_list_yuk_apoteker_home"
            />
        <RelativeLayout
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/foto_list_yuk_apoteker_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nama_list_yuk_apoteker_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Apt. St. Chadijah, S.Farm"
                />
            <TextView
                android:id="@+id/apoteker_list_yuk_apoteker_home"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/nama_list_yuk_apoteker_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Apoteker"
                />
            <TextView
                android:id="@+id/harga_list_yuk_apoteker_home"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/apoteker_list_yuk_apoteker_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Gratis"
                android:textColor="@color/hijau"
                />
            <RatingBar
                android:id="@+id/rating_list_yuk_apoteker_home"
                android:layout_marginTop="4dp"
                android:layout_below="@id/harga_list_yuk_apoteker_home"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:numStars="5"
                android:rating="5"
                android:stepSize="1"
                style="?android:attr/ratingBarStyleSmall"
                android:isIndicator="false"
                Android:transformPivotX="0dp"
                android:scaleX="0.7"
                android:theme="@style/RatingBar"
                android:progressTint="@color/golden"
                android:scaleY="0.7"
                android:layout_marginLeft="-8dp"
                android:layout_toRightOf="@+id/nilai_list_yuk_apoteker_home"

                />

            <TextView
                android:id="@+id/nilai_list_yuk_apoteker_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/harga_list_yuk_apoteker_home"
                android:layout_marginTop="4dp"
                android:text="5.0"
                android:textSize="9sp" />
            <ImageView
                android:layout_below="@id/harga_list_yuk_apoteker_home"
                android:id="@+id/icon_pengalaman_list_yuk_apoteker_home"
                android:layout_width="15dp"
                android:layout_height="17dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/rating_list_yuk_apoteker_home"
                android:src="@drawable/icon_pengalaman"/>
            <TextView
                android:layout_below="@id/harga_list_yuk_apoteker_home"
                android:id="@+id/pengalaman_list_yuk_apoteker_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/icon_pengalaman_list_yuk_apoteker_home"
                android:text="@string/_5"
                android:textSize="12sp"/>
            <TextView
                android:layout_below="@id/harga_list_yuk_apoteker_home"
                android:id="@+id/tahun_list_yuk_apoteker_home"
                android:layout_toRightOf="@+id/pengalaman_list_yuk_apoteker_home"

                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/tahun"
                />
            <Button
                android:layout_marginTop="23dp"
                android:id="@+id/button_chet_yuk"
                android:layout_width="72dp"
                android:layout_height="29dp"
                android:background="@drawable/border_button_yuk_ngobrol"
                android:textColor="@color/putih"
                android:text="@string/chat"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/ly1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/hijau"/>
</RelativeLayout>