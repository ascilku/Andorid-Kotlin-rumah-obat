<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="335dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_berinilai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beri Penialaian"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/hitam"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ly1"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_below="@+id/text_berinilai"
                android:background="@color/hijau"
                />
            <ImageView

                android:layout_marginTop="8dp"
                android:layout_below="@+id/ly1"
                android:layout_width="68dp"
                android:layout_centerHorizontal="true"
                android:layout_height="68dp"
                android:src="@drawable/contoh_foto_yuk"
                android:id="@+id/foto_penilaian"
                />
            <TextView
                android:id="@+id/nama_penilaian_apoteker"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_below="@+id/foto_penilaian"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/apt_st_chadijah_s_farm"
                />
            <RelativeLayout
                android:id="@+id/rl4"
                android:layout_marginTop="12dp"
                android:layout_below="@id/nama_penilaian_apoteker"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/ly3"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="41dp"
                        android:layout_height="81dp"
                        android:src="@drawable/puas"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/penilaian_puass"
                        />
                    <TextView
                        android:layout_below="@+id/penilaian_puass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puas"
                        android:layout_centerHorizontal="true"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/hitam"
                        android:layout_marginTop="10dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="56dp"
                    android:layout_toRightOf="@+id/ly3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:layout_width="41dp"
                        android:layout_height="81dp"
                        android:src="@drawable/tdkpuas"
                        android:id="@+id/penilaiantidakPuass"
                        />
                    <TextView
                        android:layout_below="@+id/penilaiantidakPuass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tidak Puas"
                        android:layout_centerHorizontal="true"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/hitam"
                        android:layout_marginTop="10dp"
                        />
                </RelativeLayout>
            </RelativeLayout>
<!--            <TextView-->
<!--                android:layout_below="@+id/rl4"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:layout_marginTop="26dp"-->
<!--                android:id="@+id/button_chet_yuk"-->
<!--                android:layout_width="156dp"-->
<!--                android:layout_height="32dp"-->
<!--                android:textColor="@color/putih"-->
<!--                android:text="@string/nilai"-->
<!--                android:textAllCaps="false"-->
<!--                android:textSize="14sp"-->
<!--                -->
<!--                />-->
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>