<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Register_Fragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:padding="30dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/logo_Register"
            android:layout_centerHorizontal="true"
            android:layout_width="79dp"
            android:layout_height="79dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/logo1"/>


        <RelativeLayout
            android:id="@+id/rl5"
            android:layout_below="@id/logo_Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/namaPanjang_Register"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="#F4F4F4"
                android:hint="Contoh Nama : apt. Aditya Pradhana, S.Farm"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12dp" />
            <EditText
                android:id="@+id/namaPanjang_Register1"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="#F4F4F4"
                android:hint="Nama Pengguna"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12dp" />
<!--            <ImageButton-->
<!--                android:layout_width="24dp"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_height="24dp"-->
<!--                android:layout_marginTop="2dp"-->
<!--                android:layout_marginLeft="4dp"-->
<!--                android:layout_alignParentRight="true"-->
<!--                android:layout_marginRight="10dp"-->
<!--                android:src="@drawable/ic_help_black_24dp"/>-->
        </RelativeLayout>


        <EditText
            android:id="@+id/email_Register"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_below="@id/rl5"
            android:layout_marginTop="20dp"
            android:background="#F4F4F4"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="12dp" />
        <EditText
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:hint="No Hp"
            android:textSize="12dp"
            android:id="@+id/no_Register"
            android:background="#F4F4F4"
            android:inputType="number"
            android:layout_below="@id/email_Register"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"/>
        <EditText
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:hint="Password"
            android:textSize="12dp"
            android:id="@+id/password_Register"
            android:background="#F4F4F4"
            android:inputType="textPassword"
            android:layout_below="@id/no_Register"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"/>
        <EditText
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:hint="Comfirm Password"
            android:textSize="12dp"
            android:id="@+id/c_password_Register"
            android:background="#F4F4F4"
            android:inputType="textPassword"
            android:layout_below="@id/password_Register"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"/>

        <Button
            android:id="@+id/bottonRegister"
            android:layout_below="@id/c_password_Register"
            android:layout_width="match_parent"
            android:layout_marginTop="20sp"
            android:background="@drawable/border_button_cari_apoteker"
            android:textColor="@color/putih"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:layout_height="36dp"/>
    </RelativeLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progress_Register"/>
</RelativeLayout>