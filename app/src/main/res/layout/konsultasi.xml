<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.Konsultasi">
    <androidx.appcompat.widget.Toolbar
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/hijau"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/beckChatingan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back_black_24dp"/>

            <TextView
                android:id="@+id/nama_profil"
                android:layout_toRightOf="@+id/beck_profil_Chatingan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/putih"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="Konsultasi"
                />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        android:layout_marginTop="40dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:paddingTop="16dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_below="@+id/klik_lihat_apoteker_konsultasi"
                        android:id="@+id/rv_konsultasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <ProgressBar
                        android:layout_centerInParent="true"
                        android:id="@+id/progress_konsultasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_marginLeft="16dp"
                        android:id="@+id/klik_lihat_apoteker_konsultasi"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lihat_semua"
                        android:textSize="12sp"
                        android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                        android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
                        android:layout_alignParentEnd="true"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>
                <TextView
                    android:layout_below="@+id/rl1"
                    android:layout_marginTop="24dp"
                    android:textSize="16sp"
                   android:id="@+id/textMandiri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengobatan Mandiri" />
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/textMandiri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ly1"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:weightSum="3"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img_influenza"
                                android:layout_width="68dp"
                                android:layout_height="72dp"
                                android:src="@drawable/inflenza"/>
                            <TextView
                                android:layout_below="@+id/img_influenza"
                                android:textSize="10sp"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/influenza"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img_batuk"
                                android:layout_width="68dp"
                                android:layout_height="72dp"
                                android:src="@drawable/batuk"/>
                            <TextView
                                android:layout_below="@+id/img_batuk"
                                android:textSize="10sp"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Batuk"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img_demam"
                                android:layout_width="68dp"
                                android:layout_height="72dp"
                                android:src="@drawable/demam"/>
                            <TextView
                                android:layout_below="@+id/img_demam"
                                android:textSize="10sp"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Batuk"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly2"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:weightSum="3"
                        android:layout_below="@+id/ly1"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img_sakit_kepala"
                                android:layout_width="68dp"
                                android:layout_height="72dp"
                                android:src="@drawable/sakit_kepala"/>
                            <TextView
                                android:layout_below="@+id/img_sakit_kepala"
                                android:textSize="10sp"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sakit Kepala"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img_maag"
                                android:layout_width="68dp"
                                android:layout_height="72dp"
                                android:src="@drawable/maag"/>
                            <TextView
                                android:layout_below="@+id/img_maag"
                                android:textSize="10sp"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Maag"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img_masuk_angin"
                                android:layout_width="68dp"
                                android:layout_height="72dp"
                                android:src="@drawable/masuk_angin"/>
                            <TextView
                                android:layout_below="@+id/img_masuk_angin"
                                android:textSize="10sp"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Masuk Angin"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:id="@+id/ly3"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:weightSum="3"
                        android:layout_below="@+id/ly2"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img_jerawat"
                                android:layout_width="68dp"
                                android:layout_height="72dp"
                                android:src="@drawable/jerawat"/>
                            <TextView
                                android:layout_below="@+id/img_jerawat"
                                android:textSize="10sp"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/influenza"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img_suplemen"
                                android:layout_width="68dp"
                                android:layout_height="72dp"
                                android:src="@drawable/nyeri"/>
                            <TextView
                                android:layout_below="@+id/img_suplemen"
                                android:textSize="10sp"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Suplemen"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img_nyeri"
                                android:layout_width="68dp"
                                android:layout_height="72dp"
                                android:src="@drawable/demam"/>
                            <TextView
                                android:layout_below="@+id/img_nyeri"
                                android:textSize="10sp"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nyeri"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>